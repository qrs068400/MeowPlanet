@model MeowPlanet.ViewModels.RegisterModel

@{
    ViewData["Title"] = "Register";
}

@section Styles{
    <link href="~/css/registerpage.css" rel="stylesheet" />
}

    <section class="registersection img-bg d-flex align-items-center">
        <div class="container">
            <div class="row d-flex justify-content-center w-75">
                <div class="col-6 mycontent-left d-flex align-items-center justify-content-center">
                    <p>
                        填寫簡單資料<br />
                        一起登錄喵屋星
                    </p>
                </div>

                <div class="col-6 mycontent-right d-flex align-items-center justify-content-center">

                    <form method="post" asp-action="AddMember" asp-controller="Login" autocomplete="off">
                        <div class="regist-form">
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="form-p">Email</p>
                            </div>

                            <div class="d-flex align-items-center">
                                <input type="email" asp-for="Email" class="form-control regist-sp" autocomplete="username" aria-required="true" />

                            </div>

                            <div class="d-flex justify-content-start align-items-center err-msg-div">
                                <span asp-validation-for="Email" class="text-danger" id="EmailValid"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <p class="form-p">密碼</p>

                            </div>

                            <div class="d-flex align-items-center">
                                <input type="password" asp-for="Password" class="form-control regist-sp" autocomplete="current-password" aria-required="true" />

                            </div>

                            <div class="d-flex justify-content-start align-items-center err-msg-div">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <p class="form-p">姓名</p>

                            </div>

                            <div class="d-flex align-items-center">
                                <input type="text" asp-for="Name" class="form-control regist-sp" autocomplete="current-password" aria-required="true" />

                            </div>

                            <div class="d-flex justify-content-start align-items-center err-msg-div">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <p class="form-p">連絡電話</p>
                            </div>

                            <div class="d-flex align-items-center">
                                <input type="text" asp-for="Phone" class="form-control regist-sp" autocomplete="current-password" aria-required="true" />

                            </div>

                            <div class="d-flex justify-content-start align-items-center err-msg-div">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <p class="form-p">驗證碼</p>
                            </div>

                            <div class="d-flex align-items-center">
                                <input type="text" class="form-control regist-send" autocomplete="current-password" aria-required="true" id="verify" maxlength="5" />
                                <button type="button" class="btn btn-send" id="sendEmail">寄送驗證碼</button>
                            </div>

                            <div class="d-flex justify-content-start align-items-center err-msg-div">
                                <span class="text-danger" id="verifyspan"></span>
                            </div>

                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn regist-sp2" id="registerSubmit">註冊</button>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </section>



    @section Scripts {
    <partial name="_ValidationScriptsPartial" />


    <script>
        (() => {

            let verifycode;

            $('#sendEmail').click(function() {
                let email = $('input[type=email]').val();
                $.get("/Login/SendRegistMail", { email }, function(data) {
                    $('#verifyspan').text("驗證碼已寄出").removeClass('text-danger').css('color', '#FF8EFF');
                    verifycode = data;
                })
            })

            $('input[type=email]').blur(function() {

                if ($('#EmailValid').text() == '') {
                    if ($('input[type=email]').val() == '') {
                        $('#EmailValid').addClass('text-danger')
                    } else {
                        $.get("EmailCheck", { email: this.value }, function(data) {
                            if (data == "此信箱已註冊") {
                                $('#EmailValid').html(data).addClass('text-danger')
                            } else {
                                $('#EmailValid').removeClass('text-danger').css('color', '#FF8EFF')
                            }
                        })
                    }
                } else {
                }


            })

            $('#verify').keyup(function() {
                $('#verifyspan').text("")
                if ($('#verify').val().length == 5) {
                    if (verifycode != $('#verify').val()) {
                        $('#verifyspan').text("驗證碼錯誤").addClass('text-danger');
                    } else {
                        
                    }
                }
                
            })

            $('#registerSubmit').click(function(e) {
                e.preventDefault();

                if ($('#verify').val() != "") {
                    if (verifycode != $('#verify').val()) {
                        $('#verifyspan').text("驗證碼錯誤").addClass('text-danger');
                        return;
                    }

                } else {
                    $('#verifyspan').text("請輸入驗證碼").addClass('text-danger');
                    return;
                }

                var form = $(this).parents('form');

                $.get("EmailCheck", { email: $('input[type=email]').val() }, function(data) {
                    if (data == "此信箱可使用") {
                        Swal.fire({
                            heightAuto: false,
                            position: 'center',
                            icon: 'success',
                            title: '註冊成功',
                            showConfirmButton: false,
                            timer: 2500
                        }).then(function() {
                            form.submit();
                        })
                    } else {
                        form.submit();
                    }
                })
            })
        })()
    </script>

    }